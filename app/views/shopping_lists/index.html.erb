
 <div class="card text-center ">
        <h4 class="card-header" style="background: var(--primary-color); color: var(--white)">
         Shopping Lists
        </h4>
        <div class="row mx-5 mt-2">
          <div class="col-md-9">
              <p class="text-start"><i class="fa fa-clock-o" aria-hidden="true"></i> Amount of food items to buy: <%= @recipe_foods.count %></p>
              <p class="text-start"><i class="fa fa-clock-o" aria-hidden="true"></i> Total price of food needed: <%= @total %></p> 
          </div>
         
        </div>
    </div>

<table class="table table-striped text-center">
    <thead>
      <tr>
         <th>Name</th>
      <th>Quantity</th>
      <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% @recipe_foods.each do |sp_food| %>
        <tr>
          <td><%= sp_food.food.name %></td>
          <td><%= sp_food.quantity %><%= sp_food.food.measurement_unit %></td>
          <td><span>$<%= sp_food.food.price * sp_food.quantity.to_i%></span></td>
      <% end %>
    </tbody>