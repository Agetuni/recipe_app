<div class="card-body transbox">
  <h1>Add new food here</h1>
  <%= form_with mode: @new_food, url: foods_path do |form| %>
    <div class="form-floating mb-3">
      <%= form.text_field :name, class: "form-control", required: true %>
      <%= form.label :name, "Name of Food *" %>
    </div>
    <div class="form-floating mb-3"  >
      <%= form.text_field :measurement_unit, class:"form-control" , required: true %>
      <%= form.label :measurement_unit, "Choose measuring unit *" %>
    </div>
    <div class="form-floating mb-3">
      <%= form.number_field :price, class: "form-control", required: true %>
      <%= form.label :price, "Unit price($) *" %>
    </div>  
    <div class="form-group mt-3">
      <%= form.submit 'ðŸ¥£ Add Food', class: "btn", style: "background-color: var(--primary-color); color: var(--secondary);", data: {disable_with: "Loading..."} %>
    </div>
  <% end %>
</div>